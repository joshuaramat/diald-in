---
import { BOOKING_URL } from '../utils/seo';
---

<section class="services section">
  <div class="container">
    <div class="services__info">
      <div class="services__hours">
        <h3 class="services__info-title">Business Hours</h3>
        <ul class="services__hours-list">
          <li><span class="day">Sunday - Monday:</span> <span class="hours">Closed</span></li>
          <li><span class="day">Tuesday - Friday:</span> <span class="hours">8:00 AM - 7:00 PM</span></li>
          <li><span class="day">Saturday:</span> <span class="hours">8:00 AM - 3:00 PM</span></li>
        </ul>
      </div>
      
      <div class="services__location">
        <h3 class="services__info-title">Visit Us</h3>
        <address>
          22441 Foothill Blvd<br>
          Hayward, CA 94541
        </address>
        <div class="services__buttons">
          <a href={BOOKING_URL} class="btn btn-primary" target="_blank" rel="noopener">Book an Appointment</a>
          <a href="https://goo.gl/maps/yourGoogleMapsLink" class="btn btn-outline" target="_blank" rel="noopener">Get Directions</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--space-2xl) 0;
    background-color: #000000;
    color: #ffffff;
  }

  .services__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .service-card {
    background-color: #000000;
    border: 1px solid #333333;
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-medium), box-shadow var(--transition-medium);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: 100%;
    color: #ffffff;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent);
  }

  .service-card__icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-accent);
    color: #000000;
    border-radius: 50%;
    margin-bottom: var(--space-md);
  }

  .service-card__title {
    font-family: var(--font-primary);
    font-size: var(--text-xl);
    color: #ffffff;
    margin-bottom: var(--space-sm);
    position: relative;
    padding-bottom: var(--space-xs);
  }

  .service-card__description {
    margin-bottom: var(--space-md);
    flex-grow: 1;
    color: #999999;
  }

  .service-card__link {
    position: relative;
    font-weight: 600;
    transition: color var(--transition-medium);
    padding-bottom: 2px;
    align-self: center;
    color: var(--color-accent);
  }

  .service-card__link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--color-accent);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .service-card__link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .services__info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    margin-top: var(--space-xl);
    padding: var(--space-lg);
    background-color: #000000;
    color: #ffffff;
    border-radius: var(--radius-md);
    border: 1px solid #333333;
  }

  .services__info-title {
    margin-bottom: var(--space-md);
    color: var(--color-accent);
    font-family: var(--font-primary);
  }

  .services__hours-list {
    list-style: none;
    color: #ffffff;
  }

  .services__hours-list li {
    margin-bottom: var(--space-xs);
    display: flex;
    justify-content: space-between;
  }

  .services__hours-list .day {
    font-weight: 600;
    color: var(--color-accent);
  }

  .services__location address {
    margin-bottom: var(--space-md);
    font-style: normal;
    line-height: 1.6;
    color: #ffffff;
  }

  .services__buttons {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }

  @media (max-width: 768px) {
    .services__info {
      grid-template-columns: 1fr;
    }

    .services__buttons {
      flex-direction: column;
    }
  }

  .service-category__heading {
    font-family: var(--font-primary);
    color: #ffffff;
    font-size: var(--text-2xl);
    text-align: center;
    margin-bottom: var(--space-lg);
  }
</style> 