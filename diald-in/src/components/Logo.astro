---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  variant?: 'white' | 'black';
  width?: number;
  height?: number;
  className?: string;
  priority?: boolean;
}

const {
  variant = 'black',
  width = 200,
  height = 50,
  className = '',
  priority = false
} = Astro.props;

// Use the public logo images
const logoPath = variant === 'white' 
  ? `${import.meta.env.BASE_URL}images/logo/white/logo-option-2.1.png`
  : `${import.meta.env.BASE_URL}images/logo/black/logo-lg.png`;

// Create class string
const classString = `logo ${className} ${priority ? 'logo--priority' : ''}`.trim();
---

<img
  src={logoPath}
  alt={`Diald In Barber Studio ${variant} logo`}
  width={width}
  height={height}
  class={classString}
  loading={priority ? 'eager' : 'lazy'}
  decoding={priority ? 'sync' : 'async'}
/>

<style>
  .logo {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .logo--priority {
    content-visibility: auto;
  }
</style> 