---
import { REVIEW_AGGREGATE } from '../utils/seo';

// Sample testimonials data
const testimonials = [
  {
    author: "James T.",
    title: "Regular Client",
    rating: 5,
    text: "Best barbershop in town! The attention to detail is amazing and they always make sure I leave looking my best. Haven't found anyone who can fade like these guys."
  },
  {
    author: "Michael R.",
    title: "Weekly Client",
    rating: 5,
    text: "The barbers here are true professionals. Always punctual with appointments and deliver exactly what I ask for. The hot towel service is a game-changer."
  },
  {
    author: "David L.",
    title: "New Client",
    rating: 5,
    text: "First time getting a cut here and I was blown away. The atmosphere is great and they took their time to understand exactly what I wanted. Finally found my go-to spot."
  }
];

// Generate JSON-LD for review aggregation
const reviewAggregateJsonLd = {
  "@context": "https://schema.org",
  "@type": "AggregateRating",
  "ratingValue": REVIEW_AGGREGATE.ratingValue,
  "reviewCount": REVIEW_AGGREGATE.reviewCount,
  "bestRating": REVIEW_AGGREGATE.bestRating,
  "worstRating": REVIEW_AGGREGATE.worstRating
};

// Generate JSON-LD for individual reviews
const reviewsJsonLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": testimonials.map((testimonial, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": testimonial.rating,
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": testimonial.author
      },
      "reviewBody": testimonial.text
    }
  }))
};
---

