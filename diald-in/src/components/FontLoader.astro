---
// FontLoader component for optimized font loading
// This component should be included in the head of the layout
---

<Fragment>
  <!-- Direct stylesheet links instead of preloading for more reliable loading -->
  <link 
    rel="stylesheet" 
    href="https://db.onlinewebfonts.com/c/1db29588408eadbd4406aae9238555eb?family=Friz+Quadrata"
  />
  <link 
    rel="stylesheet" 
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
  />
  <link 
    rel="stylesheet" 
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
  />
  
  <!-- Font-display swap ensures text is visible while fonts are loading -->
  <style is:inline>
    /* Font loading optimization */
    @font-face {
      font-family: 'Friz Quadrata';
      font-style: normal;
      font-weight: 400 700;
      font-display: swap;
      src: url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.eot');
      src: url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.eot?#iefix') format('embedded-opentype'),
           url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.woff2') format('woff2'),
           url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.woff') format('woff'),
           url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.ttf') format('truetype'),
           url('https://db.onlinewebfonts.com/t/1db29588408eadbd4406aae9238555eb.svg#Friz Quadrata') format('svg');
    }
    
    /* Apply Friz Quadrata to headings directly */
    h1, h2, h3, h4, h5, h6, .btn-outline-primary {
      font-family: 'Friz Quadrata', 'Trajan Pro', serif !important;
    }
    
    @font-face {
      font-family: 'Montserrat';
      font-style: normal;
      font-weight: 400 700;
      font-display: swap;
      src: local('Montserrat'), local('Montserrat-Regular');
    }
    
    @font-face {
      font-family: 'Bebas Neue';
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: local('Bebas Neue'), local('BebasNeue-Regular');
    }
  </style>
</Fragment> 