---
import { BOOKING_URL, SHOP_URL } from '../utils/seo';
import Logo from './Logo.astro';

// Navbar component
interface Props {
  isDark?: boolean;
  isSticky?: boolean;
}

const { isDark = false, isSticky = false } = Astro.props;
---

<header class={`header ${isDark ? 'header--dark' : ''} ${isSticky ? 'header--sticky' : ''}`}>
  <div class="container">
    <nav class="navbar">
      <a href="/" class="navbar__logo" aria-label="Diald In Barber Studio - Home">
        <Logo variant="white" width={160} height={40} priority={true} />
      </a>
      
      <button class="navbar__toggle" aria-label="Toggle menu" aria-expanded="false" aria-controls="main-menu">
        <span class="navbar__toggle-icon"></span>
      </button>
      
      <ul id="main-menu" class="navbar__menu" role="menu">
        <li role="none"><a href="/" class="navbar__link" role="menuitem">Home</a></li>
        <li role="none"><a href="#services" class="navbar__link" role="menuitem">Services</a></li>
        <li role="none"><a href="#about" class="navbar__link" role="menuitem">About</a></li>
        <li role="none"><a href="#booking" class="navbar__link" role="menuitem">Booking</a></li>
        <li role="none"><a href="#shop" class="navbar__link" role="menuitem">Shop</a></li>
        <li role="none"><a href="#testimonials" class="navbar__link" role="menuitem">Reviews</a></li>
        <li role="none" class="navbar__cta-wrapper">
          <a href={BOOKING_URL} class="navbar__link navbar__link--cta" role="menuitem" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="navbar__cta-icon"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            Book Appointment
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle logic
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.navbar__toggle');
    const menu = document.querySelector('.navbar__menu');
    
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('navbar__menu--active');
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', (!expanded).toString());
      });
    }
    
    // Close menu when clicking on links
    const menuLinks = document.querySelectorAll('.navbar__link');
    if (menuLinks.length > 0 && menu) {
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth <= 768) {
            menu.classList.remove('navbar__menu--active');
            if (toggle) {
              toggle.setAttribute('aria-expanded', 'false');
            }
          }
        });
      });
    }
    
    // Sticky header logic
    const header = document.querySelector('.header--sticky');
    if (header) {
      const addStickyClass = () => {
        if (window.scrollY > 80) {
          header.classList.add('is-sticky');
        } else {
          header.classList.remove('is-sticky');
        }
      };
      
      // Check on initial load
      addStickyClass();
      
      // Check on scroll
      window.addEventListener('scroll', addStickyClass);
    }
  });
</script>

<style>
  .header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: background-color var(--transition-medium), box-shadow var(--transition-medium);
    background-color: #000000;
    color: #ffffff;
    font-family: 'Brachial', sans-serif;
  }
  
  .header--sticky {
    position: fixed;
  }
  
  .header--sticky.is-sticky {
    background-color: #000000;
    box-shadow: var(--shadow-md);
  }
  
  .header--dark {
    color: #ffffff;
  }
  
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) 0;
    position: relative;
  }
  
  .navbar__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  
  .header--dark .navbar__logo {
    color: #ffffff;
  }
  
  .navbar__logo-text {
    display: inline-block;
    font-family: 'Brachial', sans-serif;
  }
  
  .navbar__logo-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .navbar__menu {
    display: flex;
    gap: var(--space-md);
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
    font-family: 'Brachial', sans-serif;
  }
  
  .navbar__link {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
    padding: 0.5rem;
    display: inline-block;
    position: relative;
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.5px;
  }
  
  .navbar__link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0.5rem;
    background-color: var(--color-accent);
    transition: width var(--transition-medium);
  }
  
  .navbar__link:hover::after, 
  .navbar__link:focus::after {
    width: calc(100% - 1rem);
  }
  
  .navbar__link:hover, 
  .navbar__link:focus {
    color: var(--color-accent);
    text-decoration: none;
  }
  
  .navbar__cta-wrapper {
    margin-left: var(--space-md);
  }
  
  .navbar__link--cta {
    background-color: var(--color-accent);
    color: #000000;
    padding: 0.5rem 1.25rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: transform var(--transition-fast), background-color var(--transition-fast), box-shadow var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: 'Brachial', sans-serif;
  }
  
  .navbar__link--cta::after {
    display: none;
  }
  
  .navbar__link--cta:hover,
  .navbar__link--cta:focus {
    background-color: #ffffff;
    color: #000000;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .navbar__cta-icon {
    flex-shrink: 0;
  }
  
  .navbar__toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 2rem;
    height: 2rem;
    position: relative;
    font-family: 'Brachial', sans-serif;
  }
  
  .navbar__toggle-icon,
  .navbar__toggle-icon::before,
  .navbar__toggle-icon::after {
    display: block;
    background-color: #ffffff;
    height: 2px;
    width: 100%;
    position: absolute;
    left: 0;
    transition: transform var(--transition-medium);
  }
  
  .navbar__toggle-icon {
    top: 50%;
    transform: translateY(-50%);
  }
  
  .navbar__toggle-icon::before,
  .navbar__toggle-icon::after {
    content: "";
  }
  
  .navbar__toggle-icon::before {
    top: -8px;
  }
  
  .navbar__toggle-icon::after {
    bottom: -8px;
  }
  
  @media (max-width: 992px) {
    .navbar__menu {
      gap: var(--space-sm);
    }
    
    .navbar__link {
      font-size: var(--text-sm);
    }
  }
  
  @media (max-width: 768px) {
    .navbar__toggle {
      display: block;
      z-index: 110;
    }
    
    .navbar__menu {
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      width: 75%;
      max-width: 320px;
      background-color: #000000;
      color: #ffffff;
      flex-direction: column;
      padding: 5rem var(--space-lg) var(--space-lg);
      transform: translateX(100%);
      transition: transform var(--transition-medium);
      box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
      z-index: 100;
    }
    
    .navbar__menu--active {
      transform: translateX(0);
    }
    
    .navbar__link {
      display: block;
      width: 100%;
      padding: var(--space-sm) 0;
      font-size: var(--text-base);
    }
    
    .navbar__link::after {
      left: 0;
    }
    
    .navbar__link:hover::after, 
    .navbar__link:focus::after {
      width: 100%;
    }
    
    .navbar__cta-wrapper {
      margin-left: 0;
      margin-top: var(--space-md);
      width: 100%;
    }
    
    .navbar__link--cta {
      text-align: center;
      display: flex;
      justify-content: center;
      padding: var(--space-sm) var(--space-md);
    }
    
    [aria-expanded="true"] .navbar__toggle-icon {
      background-color: transparent;
    }
    
    [aria-expanded="true"] .navbar__toggle-icon::before {
      transform: rotate(45deg);
      top: 0;
    }
    
    [aria-expanded="true"] .navbar__toggle-icon::after {
      transform: rotate(-45deg);
      bottom: 0;
    }
  }
</style> 