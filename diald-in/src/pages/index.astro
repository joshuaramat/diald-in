---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Services from '../components/Services.astro';
import About from '../components/About.astro';
import Booking from '../components/Booking.astro';
import ShopProducts from '../components/ShopProducts.astro';
import Testimonials from '../components/Testimonials.astro';
import { BOOKING_URL } from '../utils/seo';
---

<BaseLayout>
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <Navbar isDark={true} isSticky={true} />
      
      <div class="container hero__container">
        <h1 class="hero__title">DIALD IN BARBER STUDIO</h1>
        <p class="hero__subtitle">Where great conversations meet even better cuts. Delivering precision grooming and expert styles in a clean, welcoming environment.</p>
        <div class="hero__cta">
          <a href={BOOKING_URL} class="btn btn-primary hero__cta-primary" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hero__cta-icon"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            Book an Appointment
          </a>
          <a href="#services" class="btn btn-outline">View Services</a>
        </div>
      </div>
      
      <div class="hero__scroll-indicator">
        <div class="hero__scroll-icon"></div>
        <span class="hero__scroll-text">Scroll Down</span>
      </div>
      
      <div class="hero__corner-badge">
        <span>Top Rated</span>
      </div>
    </section>
    
    <!-- About Section -->
    <About />
    
    <!-- Services Section -->
    <Services />
    
    <!-- Booking Section -->
    <Booking />
    
    <!-- Testimonials Section -->
    <Testimonials />
    
    <!-- Shop Products Section -->
    <ShopProducts />
    
    <!-- CTA Section -->
    <section class="cta section">
      <div class="container">
        <div class="cta__content">
          <h2 class="cta__title">Ready for a Fresh Cut?</h2>
          <p class="cta__text">Whether you're coming in for a fresh weekly lineup or a complete style transformation, we deliver premium service in a clean, comfortable, and welcoming environment.</p>
          <div class="cta__buttons">
            <a href={BOOKING_URL} class="btn btn-primary" target="_blank" rel="noopener">Book Now</a>
            <a href="#booking" class="btn btn-outline">Learn How Booking Works</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  /* Hero styles */
  .hero {
    position: relative;
    min-height: 100vh;
    background-color: var(--color-primary);
    background-image: linear-gradient(to bottom, rgba(44, 62, 80, 0.85), rgba(44, 62, 80, 0.95)), url('https://placehold.co/1920x1080');
    background-size: cover;
    background-position: center;
    color: var(--color-light);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .hero__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: var(--space-xl) var(--container-padding);
    z-index: 2;
  }
  
  .hero__title {
    font-family: var(--font-accent);
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    margin-bottom: var(--space-md);
    letter-spacing: 2px;
    line-height: 1.1;
    text-transform: uppercase;
  }
  
  .hero__subtitle {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: var(--space-lg);
    line-height: 1.5;
  }
  
  .hero__cta {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-md);
  }
  
  .hero__cta-primary {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 0.75rem 1.5rem;
    font-size: var(--text-lg);
    box-shadow: var(--shadow-md);
    transform: translateY(0);
    transition: transform var(--transition-medium), box-shadow var(--transition-medium);
  }
  
  .hero__cta-primary:hover, 
  .hero__cta-primary:focus {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }
  
  .hero__cta-icon {
    flex-shrink: 0;
  }
  
  .hero__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    animation: bounce 2s infinite;
  }
  
  .hero__scroll-icon {
    width: 30px;
    height: 50px;
    border: 2px solid var(--color-light);
    border-radius: 20px;
    position: relative;
    margin-bottom: 0.5rem;
  }
  
  .hero__scroll-icon::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    width: 6px;
    height: 6px;
    margin-left: -3px;
    background-color: var(--color-light);
    border-radius: 50%;
    animation: scrollDown 2s infinite;
  }
  
  .hero__scroll-text {
    font-size: var(--text-xs);
    letter-spacing: 1px;
    color: var(--color-light);
    text-transform: uppercase;
  }
  
  .hero__corner-badge {
    position: absolute;
    top: 0;
    right: 0;
    background-color: var(--color-accent);
    color: var(--color-dark);
    padding: 0.5rem 2rem;
    font-size: var(--text-sm);
    font-weight: 600;
    transform: translateY(-30%) rotate(45deg) translateX(30%);
    z-index: 2;
  }
  
  @keyframes scrollDown {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    80% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 0;
    }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
  
  @media (max-width: 768px) {
    .hero__cta {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }
    
    .hero__cta .btn {
      width: 100%;
    }
  }
  
  /* CTA section */
  .cta {
    padding: var(--space-2xl) 0;
    background-color: var(--color-light);
  }
  
  .cta__content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  
  .cta__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
    color: var(--color-primary);
  }
  
  .cta__text {
    margin-bottom: var(--space-lg);
    font-size: var(--text-lg);
    color: var(--color-gray);
  }
  
  .cta__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }
  
  @media (max-width: 768px) {
    .cta__buttons {
      flex-direction: column;
      align-items: center;
      max-width: 300px;
      margin: 0 auto;
    }
    
    .cta__buttons .btn {
      width: 100%;
    }
  }
</style>
