---
import Button from './Button.astro';
import { BOOKING_URL } from '../utils/seo';
---

<section class="cta section">
  <div class="container">
    <div class="cta__content">
      <h2 class="cta__title diald-in">Ready to Look Your Best?</h2>
      <p class="cta__subtitle">Experience the Diald In Difference</p>
      <p class="cta__text">Whether you're looking for a fresh weekly lineup or a complete style transformation, our expert barbers deliver premium service in a clean, comfortable, and welcoming environment that feels like home.</p>
      <div class="cta__buttons">
        <Button href={BOOKING_URL} variant="primary" target="_blank" rel="noopener">Book Your Appointment</Button>
        <Button href="#booking" variant="outline" class="btn-outline-primary">Learn How It Works</Button>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    padding: var(--space-2xl) 0;
    background-color: #000000;
    color: #ffffff;
  }
  
  .cta__content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  
  .cta__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
    color: #ffffff;
  }
  
  .cta__subtitle {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-md);
    color: #ffffff;
  }
  
  .cta__text {
    margin-bottom: var(--space-lg);
    font-size: var(--text-lg);
    color: #999999;
  }
  
  .cta__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }
  
  .btn-outline-primary {
    border: 2px solid #ffffff;
    color: #ffffff;
    font-weight: 500;
    transition: all var(--transition-medium);
  }

  .btn-outline-primary:hover, 
  .btn-outline-primary:focus {
    background-color: #ffffff;
    color: #000000;
    text-decoration: none;
  }
  
  @media (max-width: 768px) {
    .cta {
      padding: var(--space-xl) 0;
    }
    
    .cta__content {
      padding: 0 var(--space-md);
    }
    
    .cta__title {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-sm);
    }
    
    .cta__subtitle {
      font-size: var(--text-xl);
      margin-bottom: var(--space-sm);
    }
    
    .cta__text {
      font-size: var(--text-base);
      margin-bottom: var(--space-md);
    }
    
    .cta__buttons {
      flex-direction: column;
      align-items: center;
      max-width: 280px;
      margin: 0 auto;
      gap: var(--space-sm);
    }
    
    .cta__buttons .btn {
      width: 100%;
      padding: var(--space-sm) var(--space-md);
      font-size: var(--text-sm);
    }
  }

  @media (max-width: 480px) {
    .cta__content {
      padding: 0 var(--space-sm);
    }
    
    .cta__title {
      font-size: var(--text-xl);
    }
    
    .cta__subtitle {
      font-size: var(--text-sm);
    }
    
    .cta__text {
      font-size: var(--text-sm);
    }
    
    .cta__buttons {
      max-width: 260px;
      gap: var(--space-xs);
    }
    
    .cta__buttons .btn {
      padding: 0.625rem 1rem;
      font-size: 0.875rem;
    }
  }
</style> 