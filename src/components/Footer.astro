---
import { BOOKING_URL, BUSINESS_EMAIL, SHOP_URL, PHONE_NUMBER } from '../utils/seo';
import Logo from './Logo.astro';

// Footer component
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <div class="footer__logo">
          <Logo variant="white" width={180} height={45} />
        </div>
        <p class="footer__tagline">Premier Barber Studio</p>
        <p class="footer__description">
          At Diald In Barber Studio, we're more than just a barbershop—we're a community hub where great 
          conversations meet even better cuts.
        </p>
        <div class="footer__social">
          <a href="#" aria-label="Facebook" class="footer__social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href="#" aria-label="Instagram" class="footer__social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
          </a>
        </div>
      </div>
      
      <div class="footer__nav">
        <h4 class="footer__heading">Quick Links</h4>
        <ul class="footer__links">
          <li><a href="/" class="footer__link">Home</a></li>
          <li><a href="/barbers" class="footer__link">Barbers</a></li>
          <li><a href="/products" class="footer__link">Products</a></li>
          <li><a href="/contact" class="footer__link">Contact</a></li>
        </ul>
      </div>
      
      <div class="footer__contact">
        <h4 class="footer__heading">Contact Us</h4>
        <address class="footer__address">
          <p>22441 Foothill Blvd<br>Hayward, CA 94541</p>
          <p><a href={`tel:${PHONE_NUMBER}`} class="footer__link">(510) 963-5985</a></p>
          <p><a href={`mailto:${BUSINESS_EMAIL}`} class="footer__link">{BUSINESS_EMAIL}</a></p>
        </address>
        <div class="footer__hours">
          <h5 class="footer__subheading">Hours</h5>
            <p>Sun - Mon: Closed<br>Tues - Fri: 8:00 AM - 7:00 PM<br>Sat: 8:00 AM - 3:00 PM</p>
        </div>
        <div class="footer__cta">
          <a href={BOOKING_URL} class="btn btn-outline btn-sm" target="_blank" rel="noopener">Book Appointment</a>
        </div>
      </div>
    </div>
    
    <div class="footer__shop">
      <h4 class="footer__heading footer__heading--centered">Professional Hair Products</h4>
      <p class="footer__shop-tagline">Get the same premium products we use in the studio</p>
      <div class="footer__shop-brands">
        <span class="footer__shop-brand">DAKRI Hair</span>
        <span class="footer__shop-separator">•</span>
        <span class="footer__shop-description">Professional Grade</span>
      </div>
      <div class="footer__shop-cta">
        <a href={SHOP_URL} class="btn btn-accent" target="_blank" rel="noopener">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="btn-icon">
            <path d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5M17 13v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6"/>
          </svg>
          Shop DAKRI Hair
        </a>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">&copy; {currentYear} Diald In Barber Studio. All rights reserved.</p>
      <div class="footer__legal">
        <a href="/privacy" class="footer__link footer__link--small">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #000000;
    color: #ffffff;
    padding: var(--space-xl) 0 var(--space-lg);
    font-family: 'Brachial', sans-serif;
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }
  
  .footer__logo {
    margin-bottom: var(--space-xs);
  }
  
  .footer__tagline {
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--space-xs);
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.5px;
  }
  
  .footer__description {
    color: #999999;
    margin-bottom: var(--space-md);
    font-size: var(--text-sm);
    line-height: 1.6;
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.3px;
  }
  
  .footer__social {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }
  
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #333333;
    color: #ffffff;
    transition: all var(--transition-fast);
  }
  
  .footer__social-link:hover {
    background-color: var(--color-accent);
    color: #000000;
    transform: translateY(-3px);
  }
  
  .footer__heading {
    font-family: 'Brachial', sans-serif;
    font-size: var(--text-lg);
    margin-bottom: var(--space-md);
    color: var(--color-accent);
    letter-spacing: 0.75px;
    font-weight: 600;
  }
  
  .footer__heading--centered {
    text-align: center;
    margin-top: var(--space-xl);
  }
  
  .footer__subheading {
    font-family: 'Brachial', sans-serif;
    font-size: var(--text-base);
    margin-bottom: var(--space-xs);
    color: var(--color-accent);
    letter-spacing: 0.5px;
    font-weight: 600;
  }
  
  .footer__links {
    list-style: none;
    padding: 0;
  }
  
  .footer__links li {
    margin-bottom: var(--space-xs);
  }
  
  .footer__link {
    color: #ffffff;
    text-decoration: none;
    transition: color var(--transition-fast);
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.3px;
  }
  
  .footer__link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  
  .footer__address {
    font-style: normal;
    margin-bottom: var(--space-md);
    font-family: 'Brachial', sans-serif;
  }
  
  .footer__address p {
    margin-bottom: var(--space-xs);
    color: #ffffff;
    letter-spacing: 0.3px;
  }
  
  .footer__hours p {
    color: #999999;
    line-height: 1.7;
    margin-bottom: var(--space-md);
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.3px;
  }
  
  .footer__cta {
    margin-top: var(--space-md);
  }
  
  .btn-outline {
    border-color: var(--color-accent);
    color: var(--color-accent);
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.5px;
  }
  
  .btn-outline:hover, .btn-outline:focus {
    background-color: var(--color-accent);
    color: #000000;
  }
  
  .btn-sm {
    padding: 0.4rem 1rem;
    font-size: var(--text-sm);
  }
  
  .btn-accent {
    background-color: var(--color-accent);
    color: #000000;
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  .btn-accent:hover, .btn-accent:focus {
    background-color: #ffffff;
    color: #000000;
  }
  
  .btn-icon {
    transition: transform 0.3s ease;
  }
  
  .btn-accent:hover .btn-icon {
    transform: translateX(2px);
  }
  
  .footer__shop {
    border-top: 1px solid #333333;
    padding-top: var(--space-lg);
    margin-bottom: var(--space-xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .footer__shop-tagline {
    color: #999999;
    margin-bottom: var(--space-md);
    max-width: 500px;
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.3px;
  }
  
  .footer__shop-brands {
    margin-bottom: var(--space-md);
  }
  
  .footer__shop-brand {
    font-weight: 600;
    margin-right: var(--space-xs);
  }
  
  .footer__shop-separator {
    margin-right: var(--space-xs);
  }
  
  .footer__shop-description {
    color: #999999;
  }
  
  .footer__shop-cta {
    margin-top: var(--space-xs);
  }
  
  .footer__bottom {
    padding-top: var(--space-md);
    border-top: 1px solid #333333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
  }
  
  .footer__copyright {
    color: #999999;
    font-size: var(--text-sm);
    font-family: 'Brachial', sans-serif;
    letter-spacing: 0.3px;
  }
  
  .footer__legal {
    display: flex;
    gap: var(--space-md);
  }
  
  .footer__link--small {
    font-size: var(--text-sm);
  }
  
  @media (max-width: 768px) {
    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .footer__legal {
      justify-content: center;
    }
  }
</style> 